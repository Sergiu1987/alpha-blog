<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-from-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= form.label :email, class: "col-2 col-from-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= form.label :password, class: "col-2 col-from-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="d-grid gap-2 col-2 mx-auto mt-4">
          <%= form.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center mb-3">
    <%= link_to '[ Cancel and return articles listing ]', articles_path, class: "text-info link" %>
  </div>
</div>
